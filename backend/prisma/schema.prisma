generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("BACKEND_DB_URL")
}

enum UserPlan {
  FREE
  PREMIUM
}

model User {
  id            String    @id @default(uuid())
  name          String
  email         String    @unique
  password      String
  isActive      Boolean   @default(true)
  plan          UserPlan  @default(FREE)
  resumeText    String?   @db.Text
  telegramChatId BigInt?   @unique
  keyword       String?
  location      String    @default("Brasil")
  isRemote      Boolean   @default(false)
  scansCount    Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  userCV        UserCV?
}

model Job {
  id          String   @id @default(uuid())
  title       String
  company     String
  location    String
  description String?  @db.Text
  jobUrl      String   @unique
  postedDate  String?
  adjustedDescription String? @db.Text
  adjustIA    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserCV {
  id        String   @id @default(uuid())
  filename  String?
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String   @unique
}
